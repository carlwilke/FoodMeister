@page
@model FoodMeister.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurant</h1>

<form method="get">
    <div class="form-group">
        <input type="search" class="form-control" value="" name="searchTerm" asp-for="SearchTerm" />
        <button class="btn btn-dark">
            <i class="fa fa-cog"></i>

        </button>
    </div>
</form>

@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}


<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

